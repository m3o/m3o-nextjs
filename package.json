{
  "name": "@m3o/nextjs",
  "version": "0.0.103",
  "description": "M3O Nextjs SDK for integrating M3O APIs to allow for rapid product development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && npm run build:styles",
    "build-storybook": "build-storybook",
    "build:styles": "webpack",
    "cypress:open": "cypress open",
    "dev": "start-server-and-test start:auth 3000 cypress:open",
    "prebuild": "rimraf ./dist",
    "prepack": "npm run build",
    "install:auth": "npm i --prefix=examples/auth --no-package-lock",
    "start:auth": "npm run dev --prefix=examples/auth",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "M3O (https://m3o.com)",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/chance": "^1.1.3",
    "@types/cookie": "^0.4.1",
    "@types/js-cookie": "^3.0.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.1.3",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "mini-css-extract-plugin": "^2.4.4",
    "postcss": "^8.3.11",
    "start-server-and-test": "^1.14.0",
    "storybook-css-modules-preset": "^1.1.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.3",
    "chance": "^1.1.8",
    "classnames": "^2.3.1",
    "cookie": "^0.4.1",
    "cypress": "^9.0.0",
    "js-cookie": "^3.0.1",
    "m3o": "^1.0.770",
    "next": "^12.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.19.4",
    "rimraf": "^3.0.2",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "yup": "^0.32.11"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "target": "es6"
        }
      }
    },
    "setupFilesAfterEnv": [
      "./__tests__/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./cypress"
    ]
  }
}
