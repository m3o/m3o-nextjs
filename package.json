{
  "name": "@m3o/nextjs",
  "version": "0.0.113",
  "description": "M3O Nextjs SDK for integrating M3O APIs to allow for rapid product development",
  "main": "./index.js",
  "types": "./typings",
  "files": [
    "m3o-next.css",
    "ui",
    "user",
    "index.js",
    "config.js",
    "utils",
    "types.d.ts",
    "config.d.ts",
    "index.d.ts"
  ],
  "scripts": {
    "build": "npm run build:package && npm run build:css && tsc",
    "build-storybook": "build-storybook",
    "build:css": "postcss --config config/postcss.config.css src/styles/m3o-next.css --dir ./",
    "build:package": "tsc",
    "cypress:open": "cypress open",
    "dev": "start-server-and-test start:auth 3000 cypress:open",
    "prebuild": "rimraf ./dist",
    "prepack": "npm run build",
    "install:auth": "npm i --prefix=examples/auth --no-package-lock",
    "start:auth": "npm run dev --prefix=examples/auth",
    "storybook": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Martin Virando (martin@m3o.com)",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/chance": "^1.1.3",
    "@types/cookie": "^0.4.1",
    "@types/js-cookie": "^3.0.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "cssnano": "^5.0.11",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "mini-css-extract-plugin": "^2.4.4",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "start-server-and-test": "^1.14.0",
    "storybook-css-modules-preset": "^1.1.1",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "webpack": "^5.64.1"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.3",
    "chance": "^1.1.8",
    "classnames": "^2.3.1",
    "cookie": "^0.4.1",
    "cypress": "^9.0.0",
    "js-cookie": "^3.0.1",
    "m3o": "^1.0.826",
    "next": "^12.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.20.5",
    "rimraf": "^3.0.2",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "yup": "^0.32.11"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "target": "es6"
        }
      }
    },
    "setupFilesAfterEnv": [
      "./__tests__/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./cypress"
    ]
  },
  "browserslist": "> 0.25%, not dead"
}
