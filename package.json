{
  "name": "@m3o/nextjs",
  "version": "0.0.1",
  "description": "",
  "main": "dist/m3o-next.js",
  "types": "dist/index.d.ts",
  "browser": {
    "m3o-next.css": "dist/m3o-next.css"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build-storybook": "build-storybook",
    "cypress:open": "cypress open",
    "prebuild": "rimraf ./dist",
    "build": "rollup -c",
    "install:auth": "npm i --prefix=examples/auth --no-package-lock",
    "rollup-watch": "rollup -c -w",
    "start:auth": "npm run rollup-watch & npm run dev --prefix=examples/auth",
    "storybook": "start-storybook -p 6006",
    "test:auth:watch": "start-server-and-test start:auth 3000 cypress:open"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/cookie": "^0.4.1",
    "@types/js-cookie": "^3.0.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "next": "^12.0.3",
    "postcss": "^8.3.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-postcss": "^4.0.1",
    "start-server-and-test": "^1.14.0",
    "storybook-css-modules-preset": "^1.1.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.8.3",
    "classnames": "^2.3.1",
    "cookie": "^0.4.1",
    "cypress": "^9.0.0",
    "js-cookie": "^3.0.1",
    "m3o": "^1.0.682",
    "react-hook-form": "^7.19.4",
    "rimraf": "^3.0.2",
    "rollup-plugin-postcss-modules": "^2.0.2",
    "yup": "^0.32.11"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "target": "es6"
        }
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ]
  }
}
